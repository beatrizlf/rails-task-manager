<div class="container">
  <h1>Tasks</h1>
    <% @tasks.each do |task| %>
      <ul>
        <li>
        <% if task.completed %>
          <i class=“far fa-check-square”></i>
        <% else %>
          <i class=“far fa-square”></i>
        <% end %>
        <%= link_to task.title, task_path(task[:id]) %></li>
      </ul>
    <% end %>
  <%= link_to "Create new task", new_task_path(@task), class: "btn btn-primary" %>
</div>
